    location /static/ {
        gzip            on;
        autoindex       on;
        alias           '{{ project_repo_path }}/static/';
        expires 30d;
    }

    location /uploads/ {
        autoindex on;
        alias           '{{ project_repo_path }}/uploads/';
    }

#    location /robots.txt {
