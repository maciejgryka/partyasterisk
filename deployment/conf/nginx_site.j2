#        access_log      off;
#        log_not_found   off;
#        expires 30d;
#    }

    location ~ /.well-known {
            allow all;
    }

    location / {
        proxy_redirect      off;
        proxy_set_header    Host                    $host;
        proxy_set_header    X-Real-IP               $remote_addr;
        proxy_set_header    X-Forwarded-For         $proxy_add_x_forwarded_for;
        proxy_set_header    X-Forwarded-Protocol    $scheme;
        proxy_pass          http://app_server0;
    }
}
